// -*- mode: jsonc -*-
{
  // ╔═════════════════════╗
  // ║     Waybar Base     ║
  // ╚═════════════════════╝
  "layer": "top",
  "position": "top",
  "spacing": 5,
  "margin-top": 12,
  "margin-left": 10,
  "margin-right": 10,

  // ╔═════════════════════╗
  // ║     Modules Left     ║
  // ╚═════════════════════╝
  "modules-left": [
    "clock",
    "hyprland/language",
    "custom/media",
    "hyprland/window"
  ],

  "clock": {
    "format": "{:%H:%M}  ",
    "timezone": "America/Caracas",
    "format-alt": "{:%A, %B %d-%m-%Y}"
  },

  "hyprland/language": {
    "format": "  {}",
    "format-en": "EN", // English
    "format-pt-br": "PT-BR", // Portuguese (Brazil)
    "format-pt-pt": "PT-PT", // Portuguese (Portugal)
    "format-es": "ES", // Spanish
    "format-fr": "FR", // French
    "format-de": "DE", // German
    "format-it": "IT", // Italian
    "format-ru": "RU", // Russian
    "format-ar": "AR", // Arabic
    "format-zh": "ZH", // Chinese
    "format-ja": "JA", // Japanese
    "format-ko": "KO", // Korean
    "format-ua": "UA", // Ukrainian
    "format-tr": "TR", // Turkish
    "format-hi": "HI", // Hindi
    "format-id": "ID", // Indonesian
    "format-vn": "VN", // Vietnamese
    "format-th": "TH", // Thai
    "format-pt": "PT", // Portuguese (generic)
    "format-unknown": "??" // Unknown language
    
  },

  "hyprland/window": {
    "format": "{title}",
    "rewrite": {
      "(.*) - Visual Studio Code": "󰘐  $1",
      "(.*) - Thunar": "  $1",
      "(.*) - Brave": " ",
      "(.*) - Zen-Bin": "🐉",
      "(.*) - YouTube - Google Chrome": "    $1",
      "(.*) - Google Chrome": "  $1",
      "(.*) Mozilla Firefox": "  $1",
      "(.*) - kitty": "󱤐 [$1]"
    },
    "separate-outputs": true
  },

  // ╔══════════════════════╗
  // ║    Modules Center     ║
  // ╚══════════════════════╝
  "modules-center": [
    "hyprland/workspaces"
  ],

  "hyprland/workspaces": {
      "font": "Predator",	
    "disable-scroll": false,
    "all-outputs": false,
    "warp-on-scroll": false
/*     "format": "{icon}",
    "format-icons": {
      "1": "Buenas",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九"
    } */
  },

  // ╔══════════════════════╗
  // ║    Modules Right      ║
  // ╚══════════════════════╝
  "modules-right": [
    "idle_inhibitor",
    "temperature",
    "network",
    "battery",
    "backlight",
    "pulseaudio",
    "custom/notification"
  ],

    "idle_inhibitor": {
        "format": " {icon} ",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "tooltip": true,
        "tooltip-format-activated": "Idle Inhibitor: Activado",
        "tooltip-format-deactivated": "Idle Inhibitor: Desactivado"
    },

    "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C {icon}",
    "format-icons": ["", "", ""]
  },

  "network": {
    "format-wifi": "{essid} ",
    "format-ethernet": "{ipaddr}/{cidr} ",
    "tooltip-format": "{ifname} via {gwaddr} ",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "Disconnected ⚠",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },

  "battery": {
    "states": {
      "critical": 5,
      "semicritical": 10,
      "warning": 20,
      "optimal": 80,
      "semifull": 97,
      "full": 100
    },
    "format": "{capacity}% {icon}",
    "format-critical": "{capacity}% 󱃍",
    "format-semicritical": "{capacity}% 󰢟",
    "format-warning": "{capacity}% 󱊡",
    "format-optimal": "{capacity}% 󱊢",
    "format-semifull": "{capacity}% 󱊣",
    "format-full": "{capacity}% 󰂄",
    "format-charging-critical": "{capacity}% 󱊤",
    "format-charging-warning": "{capacity}% 󱊤",
    "format-charging-optimal": "{capacity}% 󱊥",
    "format-charging-semifull": "{capacity}% 󱊦",
    "format-charging-full": "{capacity}% 󱃌",
    "format-plugged": "{capacity}% 󰄌"
  },

  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },

  "pulseaudio": {
    "format": "{volume}% {icon}  {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "on-click": "pavucontrol"
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
